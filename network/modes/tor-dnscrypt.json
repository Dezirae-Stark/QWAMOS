{
  "mode": "tor-dnscrypt",
  "description": "Tor anonymity with encrypted DNS (Recommended)",
  "tor_enabled": true,
  "i2p_enabled": false,
  "dnscrypt_enabled": true,
  "vpn_enabled": false,

  "tor": {
    "socks_port": 9050,
    "control_port": 9051,
    "use_bridges": false,
    "bridge_type": "obfs4",
    "circuit_build_timeout": 60,
    "circuit_isolation": true,
    "num_entry_guards": 3
  },

  "dnscrypt": {
    "listen_address": "127.0.0.1:5353",
    "server_names": ["cloudflare", "google", "quad9"],
    "require_dnssec": true,
    "require_nolog": true,
    "block_ipv6": false,
    "timeout": 5000,
    "cache_size": 512
  },

  "routing": {
    "clearnet_via": "tor",
    "dns_via": "dnscrypt"
  },

  "firewall": {
    "block_non_tor": true,
    "block_ipv6": false,
    "allow_lan": false,
    "killswitch_enabled": true
  }
}
